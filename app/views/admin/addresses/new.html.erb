<% provide(:title, 'Create city') %>
<% provide(:button_text, 'Create address') %>
<h1>Create Address</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([:admin, @address]) do |f| %>
      <%= render 'shared/error_messages', object: @address %>
      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>
  
      <%= f.label "Picture" %>
      <%= f.file_field :picture %><br>
  
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>