  <% provide(:title,'All users') %>
  <h1>All users</h1>
  <div class="row">
  <%= form_tag(admin_users_path,method: :get) do %>
    <div class="col-sm-2">
      <%= text_field_tag :name, params[:name] %>
    </div>
    <div class="col-sm-1"> 
      <%= submit_tag 'Search' %>
    </div>
  <% end %>
</div>
  <%= will_paginate %>
  <ul class="users">
    <% @users.each do |user| %>
      <li>
      <div >
        <div class="col-sm-6" style="width:70px; height:auto">
          <% if user.avatar.attached? %>
              <%= link_to image_tag(user.avatar, style:'width:100%'), users_path %>
          <% else %>
              <%= gravatar_for user, size: 50 %>
          <% end %>

        <div class="col-sm-6">
          <%= user.id %>
        </div>
        </div>
        <div class="col-sm-6">
          <%= user.name %>
        </div>
        <div class="col-sm-6">
          <%= user.email %>
        </div>
        <div class="col-sm-6">
          <%= user.created_at %>
        </div>
        <div class="col-sm-6">
          <%= user.updated_at %>
        </div>

      </div>
      </li>
      <% end %>
  </ul>
  <%= will_paginate %>