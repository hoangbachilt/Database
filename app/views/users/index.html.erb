  <% provide(:title,'All users') %>
  <h1>All users</h1>
  <%= will_paginate %>
  <ul class="users">
    <% @users.each do |user| %>
      <li>
      <div >
        <div class="col-sm-6" style="width:70px; height:auto">
          <% if user.avatar.attached? %>
              <%= link_to image_tag(user.avatar, style:'width:100%'), users_path %>
            <% else %>
              <%= gravatar_for user, size: 50 %>
          <% end %>
        </div>
        <div class="col-sm-6">
          <%= link_to user.name, user %>
        </div>
        
      </div>
      </li>
      <% end %>
  </ul>
  <%= will_paginate %>